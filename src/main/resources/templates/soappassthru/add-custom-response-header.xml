<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage name="add-custom-response-header">
	<DisplayName>setCustomResponseHeader</DisplayName>
	<AssignTo createNew="false" type="request"/>
	<Set>
		<Headers>
			<Header name="source-ip">{request.header.x-forwarded-for}</Header>
			<Header name="source-dev-username">{developer.userName}</Header>
		</Headers>
	</Set>
</AssignMessage>